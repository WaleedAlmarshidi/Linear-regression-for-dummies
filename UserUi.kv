<Graph@FigureCanvasKivyAgg>
    minimum_height: 1300
    
<InstructionPage>
    Label:
        text : 'HIIII'

<MainPage>
    GridLayout:
        cols: 3
        size : root.width, root.height
        ScrollView:            
            scroll_y: 0.15
            GridLayout:
                id: ModelBuildingSection
                cols:1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 100


        ScrollView:
            scroll_y: 0.15
            spacing: 200
            GridLayout:
                id: ModelFilteringSection
                cols:1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 350


        ScrollView:
            scroll_y: 0.15
            spacing: 0
            GridLayout:
                id: ErrorTestsSection
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 450
